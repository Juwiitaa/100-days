package day22;
import java.util.Scanner;
public class Main {
	public static void main(String[] args) {
		
		Scanner input = new Scanner(System.in);
		
		System.out.println("===== Perpustakaan =====");
		
		System.out.println("Selamat datang di perpustakaan, temukan area pengambilan yang cocok untukmu");
		
		System.out.print("Masukkan area pilihanmu (A/B/C) : ");
		char area = input.next().charAt(0);
		
		System.out.println("jenis buku pilihanmu");
		System.out.println("1. Novel");
		System.out.println("2. Komik");
		System.out.println("3. Majalah");
		System.out.print("Masukkan jawabanmu (1/2/3) : ");
		char jenisBuku = input.next().charAt(0);
		
		if (area == 'A' && jenisBuku == '1') {
			System.out.println("Benar");
			
		} else if (area == 'B' && jenisBuku == '2') {
			System.out.println("Benar");
			
		} else if (area == 'C' && jenisBuku == '3') {
			System.out.println("Benar");
			
		} else {
			System.out.println("Salah");
			System.out.println("pilihan anda tidak valid dan perhatikan penulisan hurufnya (huruf kapital dan huruf kecil)");
			
		}
		
		System.out.println("===== Semangat =====");
		
	}
}
